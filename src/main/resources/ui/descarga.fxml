<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="layout" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label fx:id="lbPorcentaje">
               <VBox.margin>
                  <Insets left="300.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="35.0" prefWidth="500.0">
               <children>
                  <Button fx:id="btPausar" mnemonicParsing="false" onAction="#pausar" text="PAUSAR">
                     <HBox.margin>
                        <Insets left="125.0" right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btCancelar" mnemonicParsing="false" onAction="#cancelar" text="CANCELAR" />
                  <Button fx:id="btEliminar" mnemonicParsing="false" onAction="#eliminar" text="ELIMINAR">
                     <HBox.margin>
                        <Insets left="10.0" right="125.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="500.0">
               <children>
                  <Label fx:id="lbNombre" prefHeight="18.0" prefWidth="200.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <ProgressBar fx:id="pbProgreso" prefHeight="20.0" prefWidth="220.0" progress="0.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </ProgressBar>
                  <Label fx:id="lbVelocidad" prefHeight="18.0" prefWidth="60.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
